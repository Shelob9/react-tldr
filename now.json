{
  "version": 2,
  "builds": [
    { "src": "docs/**/*.html", "use": "@now/static" },
    { "src": "docs/**/*.js", "use": "@now/node" }
  ],
  "routes": [
    { "src": "/", "dest": "docs/index.html" },
    { "src": "/docs", "dest": "docs/components/index.html" },
    { "src": "/sections/(.*)/(.*)", "dest": "docs/sections/$1/$2/index.html"},
    { "src": "/sections/(.*)", "dest": "docs/sections/$1/index.html" },
    { "src": "/sections", "dest": "docs/sections/index.html" }
  ]
}
